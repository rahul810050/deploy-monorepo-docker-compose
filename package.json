{
  "name": "monorepo-docker-compose",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:generate": "cd ./packages/db && npx prisma generate && cd ../..",
    "start:backend": "cd ./apps/http-server && npm run build && npm run start",
    "start:ws": "cd ./apps/ws-server && npm run build &&npm run start",
    "start:web": "cd ./apps/web && npm run dev"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.5.4",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.16",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
